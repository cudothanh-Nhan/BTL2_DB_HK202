<Window x:Class="E_BookStore.GUI.MainUIWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:E_BookStore.GUI"
        mc:Ignorable="d"
        Title="MainUIWindow" Height="450" Width="800">
    <Grid>
        <Button Content="Log out" HorizontalAlignment="Left" Height="29" Margin="719,10,0,0" VerticalAlignment="Top" Width="63" FontSize="14"/>
        <TextBox TextAlignment="Left" HorizontalAlignment="Left" Height="26" Margin="99,44,0,0" Text="Search" TextWrapping="Wrap" VerticalAlignment="Top" Width="605" FontSize="14" FontFamily="Times New Roman"/>
        <TextBlock TextAlignment="Center" HorizontalAlignment="Left" Height="24" Margin="731,44,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="27">
            <Image Source="https://drive.google.com/uc?id=1MUXeIB4r70gRQm36GDRka4-NaBASPzt_" OpacityMask="Black"/>
        </TextBlock>

        <Button HorizontalAlignment="Left" Height="26" Margin="675,44,0,0" VerticalAlignment="Top" Width="29">
            <Image Source="https://cdn.icon-icons.com/icons2/2566/PNG/512/search_icon_153438.png"/>
        </Button>
        <TextBlock HorizontalAlignment="Left" Height="26" Margin="40,44,0,0" Text="STORE" TextAlignment="Center" TextWrapping="Wrap" VerticalAlignment="Top" Width="50" FontWeight="Bold" FontFamily="Times New Roman" FontSize="14"/>
        <ComboBox Name="Instock" HorizontalAlignment="Left" Height="28" Margin="696,92,0,0" VerticalAlignment="Top" Width="86" >
            <ComboBoxItem IsSelected="True">In stock</ComboBoxItem>
            <ComboBoxItem >Show all</ComboBoxItem>
        </ComboBox>

        <ComboBox HorizontalAlignment="Left" Height="28" Margin="587,92,0,0" VerticalAlignment="Top" Width="86" >
            <ComboBoxItem IsSelected="True">Books</ComboBoxItem>
            <ComboBoxItem>Magazines</ComboBoxItem>
            <ComboBoxItem>Show all</ComboBoxItem>
        </ComboBox>
    </Grid>
</Window>
